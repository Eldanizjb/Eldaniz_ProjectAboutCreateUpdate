@model Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.MainImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.MainImageFile">
                    <span asp-validation-for="@Model.MainImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.BlogCategoryId" class="form-label">BlogCategory</label>
                    <select class="form-control mb-3" aria-label="Default select example" asp-for="@Model.BlogCategoryId">
                        <option selected>Select category</option>
                        @foreach (var item in ViewBag.BlogCategory)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.BlogCategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.TagToBlogsId" class="form-label">Tags</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.TagToBlogsId">
                        @foreach (var item in ViewBag.BlogTags)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.TagToBlogsId" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Text" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.Text" style="height:300px"></textarea>
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Blog" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>